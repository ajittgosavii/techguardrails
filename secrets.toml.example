# =============================================================================
# Cloud Compliance Canvas - Streamlit Secrets Configuration
# =============================================================================
# Copy this file to .streamlit/secrets.toml and fill in your values
# =============================================================================

# =============================================================================
# AZURE AD / ENTRA ID SSO CONFIGURATION
# =============================================================================
# To set up Azure AD:
# 1. Go to Azure Portal → Azure Active Directory → App registrations
# 2. Create a new registration
# 3. Set redirect URI to your Streamlit app URL
# 4. Create a client secret in "Certificates & secrets"
# 5. Copy the values below
# =============================================================================

[azure_ad]
enabled = true
tenant_id = "your-azure-tenant-id"
client_id = "your-application-client-id"
client_secret = "your-client-secret-value"
redirect_uri = "https://your-app-name.streamlit.app"

# Role-based email assignments (comma-separated)
# Users with these emails will automatically get the specified role on first login
super_admin_emails = "admin@yourcompany.com, superadmin@yourcompany.com"
admin_emails = "ops@yourcompany.com, devops@yourcompany.com"
security_manager_emails = "security@yourcompany.com, ciso@yourcompany.com"
finops_analyst_emails = "finops@yourcompany.com, cfo@yourcompany.com, finance@yourcompany.com"

# =============================================================================
# AWS CREDENTIALS
# =============================================================================
# Option 1: Standard key names
# Option 2: Management key names (for multi-account setups)
# =============================================================================

[aws]
# Standard key names
access_key_id = "AKIAXXXXXXXXXXXXXXXX"
secret_access_key = "your-secret-access-key"
region = "us-east-1"

# OR Management key names (for Hub-Spoke architecture)
# management_access_key_id = "AKIAXXXXXXXXXXXXXXXX"
# management_secret_access_key = "your-secret-access-key"
# default_region = "us-east-1"

# For cross-account role assumption
# role_arn = "arn:aws:iam::123456789012:role/CrossAccountRole"
# external_id = "your-external-id"

# =============================================================================
# ANTHROPIC (CLAUDE AI) CONFIGURATION
# =============================================================================

[anthropic]
api_key = "sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# FIREBASE REALTIME DATABASE (for user management)
# =============================================================================
# Optional - Required for persistent user management
# Get these from Firebase Console → Project Settings → Service Accounts
# =============================================================================

[firebase]
database_url = "https://your-project-id-default-rtdb.firebaseio.com"

[firebase.service_account]
type = "service_account"
project_id = "your-firebase-project-id"
private_key_id = "your-private-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
client_email = "firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
client_id = "123456789012345678901"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com"

# =============================================================================
# GITHUB TOKEN (for GitOps integration)
# =============================================================================

[github]
token = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
